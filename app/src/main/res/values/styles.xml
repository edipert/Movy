<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FontStyle" parent="TextAppearance.AppCompat" />

    <style name="FontStyle.Bold">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="FontStyle.Bold.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="FontStyle.Bold.36">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="FontStyle.Medium">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="FontStyle.Medium.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="FontStyle.Regular">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="FontStyle.Regular.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.InputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="errorEnabled">false</item>
        <item name="boxCollapsedPaddingTop">10dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">
            @dimen/default_elevation_secondary
        </item>
    </style>

    <style name="Widget.InputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>
</resources>